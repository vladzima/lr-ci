{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "generated/*": ["./src/generated/*"]
    }
  },
  "include": ["src/**/*", "src/index.d.ts"],
  "exclude": ["node_modules"]
}
